  "default_rules": {
    "run_frequency": "weekly",
    "lookback_days": 10,
    "max_results_per_source_per_run": 100,
    "max_new_items_total_per_run": 50,
    "must_include_all_concepts": ["llm", "education"],
    "llm_terms": [
      "large language model",
